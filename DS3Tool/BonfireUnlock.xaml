<Window x:Class="DS3Tool.BonfireUnlock"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DS3Tool"
        mc:Ignorable="d"
        Title="ItemSpawn" ResizeMode="NoResize" SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <ComboBox x:Name="BonfireDropdown" Width="200" Height="30" Text="Bonfires" IsEditable="True" SelectedIndex="-1" Margin="0,10,0,0" />
        <Button Content="Unlock Selected Bonfire" Width="200" Height="30" Margin="5" Click="UnlockSelectedButton_Click"/>
        <Button Content="Unlock All Bonfires" Width="200" Height="30" Margin="5,5,5,10" Click="UnlockAllButton_Click"/>

    </StackPanel>
</Window>
